  <style>
    body {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: linear-gradient(135deg, #667eea, #764ba2);
      font-family: Arial, sans-serif;
      color: #fff;
    }

    h1 {
      margin-bottom: 20px;
    }

    .stopwatch {
      font-size: 3rem;
      margin-bottom: 20px;
    }

    .buttons button {
      padding: 10px 20px;
      margin: 5px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.3s;
    }

    .buttons button:hover {
      opacity: 0.8;
    }

    .start { background: #4CAF50; color: #fff; }
    .pause { background: #f39c12; color: #fff; }
    .reset { background: #e74c3c; color: #fff; }
    .lap { background: #3498db; color: #fff; }

    .laps {
      margin-top: 20px;
      width: 250px;
      max-height: 200px;
      overflow-y: auto;
      border: 1px solid #ddd;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      padding: 10px;
    }

    .laps p {
      margin: 5px 0;
      padding: 5px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }
  </style>
